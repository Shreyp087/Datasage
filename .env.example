# Database
POSTGRES_USER=datasage
POSTGRES_PASSWORD=datasage_secret
POSTGRES_DB=datasage_db
DATABASE_URL=postgresql+asyncpg://datasage:datasage_secret@localhost:5432/datasage_db

# Redis
REDIS_URL=redis://localhost:6379/0

# Storage (MinIO)
MINIO_ENDPOINT=localhost:9000
MINIO_URL=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=datasage
MINIO_BUCKET_NAME=datasage
MINIO_SECURE=false

# LLM Provider Settings
LLM_PROVIDER=openai          # options: openai | anthropic

# OpenAI Settings (used when LLM_PROVIDER=openai)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o          # options: gpt-4o | gpt-4o-mini | gpt-4-turbo

# Anthropic Settings (used when LLM_PROVIDER=anthropic)
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-sonnet-4-6

# Frontend
VITE_API_URL=http://localhost:8000
